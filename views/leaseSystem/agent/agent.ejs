    <script>
        async function buildListener() {
            $('#getCert').on('click', async function (e) {
                let userAddress = $("#userAddress").val();
                let data;
                data = {
                    "userAddress": userAddress,
                }

                $.ajax({
                    url: '/leaseSystem/agent/getCert',
                    data: data,
                    type: 'post',
                    success: function (res) {
                        alert(res.msg);
                    },
                    error: function (err) {
                        console.log("error");
                        alert(err);
                    }
                });
            })
        }
        buildListener();
